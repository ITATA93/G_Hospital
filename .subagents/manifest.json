        {
            "id": "skeptic",
            "name": "Adversarial Critic",
            "vendor_preference": "claude",
            "supported_vendors": [
                "claude",
                "codex"
            ],
            "instructions": "You are the Adversarial Critic. You receive ONLY the output of another agent. Find errors, unsupported claims, logical fallacies, and security concerns.",
            "capabilities": [
                "adversarial_review",
                "output_validation",
                "fact_checking"
            ],
            "risk_tier": "low",
            "needs_approval": false,
            "context_isolation": {
                "receives": [
                    "agent_output"
                ],
                "blocked": [
                    "agent_prompt",
                    "agent_reasoning",
                    "system_instructions"
                ]
            }
        }
    ],
    "teams": {
        "full-audit": {
            "agents": [
                "reviewer",
                "lead-orchestrator"
            ],
            "mode": "sequential",
            "use_case": "Full project audit with orchestrator oversight"
        },
        "code-and-review": {
            "agents": [
                "domain-builder",
                "reviewer"
            ],
            "mode": "sequential",
            "use_case": "Generate code then review for quality and security"
        },
        "research-and-document": {
            "agents": [
                "deep-researcher",
                "support"
            ],
            "mode": "sequential",
            "use_case": "Research a topic then document findings"
        },
        "adversarial-review": {
            "agents": [
                "domain-builder",
                "skeptic"
            ],
            "mode": "sequential",
            "context_isolation": true,
            "use_case": "Generate code then have isolated critic validate output"
        }
    }
